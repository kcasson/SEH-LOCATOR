/* DEFAULTS
----------------------------------------------------------*/

body   
{
    background:Black;
    font-family: "Helvetica Neue", "Lucida Grande", "Segoe UI", Arial, Helvetica, Verdana, sans-serif;
    margin: 0px;
    padding: 0px;
    color: #696969;
}

a
{
	font-size:x-small;
}
a:link
{
	color:Black;
	
}
a:hover
{
	color:Orange;
}



/* HEADINGS   
----------------------------------------------------------*/

h1, h2, h3, h4, h5, h6
{
    font-size: 1.5em;
    color: #666666;
    font-variant: small-caps;
    text-transform: none;
    font-weight: 200;
    margin-bottom: 0px;
}

h1
{
    font-size: 1.6em;
    padding-bottom: 0px;
}

h2
{
    font-size: 1.5em;
    font-weight: 600;
}

h3
{
    font-size: 1.2em;
    color:White;
    padding:0;
}

h4
{
    font-size: 1.1em;
}

h5, h6
{
    font-size: 1em;
}

/* this rule styles <h1> and <h2> tags that are the 
first child of the left and right table columns */
.rightColumn > h1, .rightColumn > h2, .leftColumn > h1, .leftColumn > h2
{
    margin-top: 0px;
}



/* PRIMARY LAYOUT ELEMENTS   
----------------------------------------------------------*/

.page
{
    width: 960px;
    background-color: #336699;
    margin: 10px auto 0px auto;
    border: 5px solid #FF8800; /* Application main border */
    border-top:2px;
    color:Black;
    font-weight:bold;
    font-size:small;
 }

.header
{
    position: relative;
    margin: 0px;
    padding: 0px;
    background: #336699; 
    width: 100%;
}

.header h3
{
    font-weight: 700;
    margin: 0px;
    padding: 0px 0px 0px 20px;
    color: #f9f9f9;
    border: none;
    line-height: 2em;
    font-size:large;
}

.main
{
    padding: 0px 12px;
    margin: 12px 8px 8px 8px;
    min-height: 350px;
    background-color: #335599;
}

.leftCol
{
    padding: 6px 0px;
    margin: 12px 8px 8px 8px;
    width: 200px;
    min-height: 200px;
}

.footer
{
    color: #4e5766;
    padding: 8px 0px 0px 0px;
    margin: 0px auto;
    text-align: center;
    line-height: normal;
}


    

/* APPLICATION PRIMARY LAYOUT MENU
----------------------------------------------------------*/
.appBorder
{
	width: 900px;
	height: 500px;
	border: 1px solid #496077;
}
.appHeader
{
    width: 860px;
    font-family:Huxtable;
    background-color: #ffffff;
    margin: 20px auto 0px auto;
    border: 1px solid #496077;
}

.appMain
{
    width: 860px;
    font-family:Huxtable;
    background-color: #fff;
    margin: 20px auto 0px auto;
}

.appText
{
	color:Black;
}

.appLabel
{
	font-weight:bold;
	color:#FF9900;
}

	
/* TAB MENU   
----------------------------------------------------------*/

div.hideSkiplink
{
    
    width:100%;
    border-width:0;
}

div.menu
{
   
}

div.menu ul
{
    list-style: none;
    margin: 0px;
    padding: 0px;
    width: 168px;
    border:0;
}

div.menu ul li a, div.menu ul li a:visited
{
    background-color: #465c71;
    color: #dde4ec;
    display: block;
    border:0;
    border-style:none;
    padding: 0px 0px;
    text-decoration: none;
    white-space: nowrap;
}

div.menu ul li a:hover
{
    background-color: #bfcbd6;
    color: #465c71;
    text-decoration: none;
    
}

div.menu ul li a:active
{
    background-color: #465c71;
    color: #cfdbe6;
    text-decoration: none;
    border:0;
}

.menutext
{
	font-family:Helvetica;
    text-decoration: none;
	font-weight:bold;
	font-size:x-small;
	color:Black;
}
/* FORM ELEMENTS   
----------------------------------------------------------*/

fieldset
{
    margin: 1em 0px;
    padding: 1em;
    border: 1px solid #ccc;
}

fieldset p 
{
    margin: 2px 12px 10px 10px;
}

fieldset.login label, fieldset.register label, fieldset.changePassword label
{
    display: block;
}

fieldset label.inline 
{
    display: inline;
}

legend 
{
    font-size: 1.1em;
    font-weight: 600;
    padding: 2px 4px 8px 4px;
}

input.textEntry 
{
    width: 320px;
    border: 1px solid #ccc;
}

input.passwordEntry 
{
    width: 320px;
    border: 1px solid #ccc;
}

div.accountInfo
{
    width: 42%;
}

/* MISC  
----------------------------------------------------------*/

.clear
{
    clear: both;
}

.title
{
    display: block;
    float: left;
    text-align: left;
    width: auto;
}
.headlabel
{
	background-color:#FF9900;
	color:Black;
	font-weight:bold;
	font-size:small;
    float: left;
    border:1px;
    widows:900px;
}

.loginDisplay /* Header text and background */
{
	background-color:#336699;
	color:White;
	font-size:x-small;
    display: block;
    text-align: left;
    padding: 2px;
    padding-left:5px;
    
}



.failureNotification
{
    font-size: 1.2em;
    color: Red;
}

.bold
{
    font-weight: bold;
}

.siteButton
{
	height:30px;
	width:78px;
	float:right;
	font-weight:bold;
	color:Black;
	cursor:pointer;
	padding-right:10px;
}

.siteFrame
{
	width: 100%;    
	height: 100%;    
    border:1px;
    border-style:solid;
}

/* Add on pop out styles */

.siteBlock
{    
	width: 100%;    
	height: 100%;    
	z-index: 1;    
	display:block;    
	background-color:Transparent;
	filter: alpha(opacity = 55);    
	opacity:55;
	cursor:wait;
}

.siteShow
{
	position:absolute;
	color:White;
	width:600px;
	height:450px;
	z-index: 2;
	background-color:Black;
	border-style:outset;
	border-width:thick;
	cursor:auto;
	

}

.siteShow.a:link
{
     color:White;
     
 }
 .sitePopout.a:link
{
     color:Black;
     
}

.sitePopout
{
	position:absolute;
	color:Black;
	width:910px;
	height:650px;
	z-index: 2;
	background-color:White;
	border-style:outset;
	border-width:thick;
	font-weight:bolder;
	cursor:auto;


}
.blockScreen 
{    
	width: 100%;    
	height: 100%;    
	position:absolute;
	z-index: 1;    
	display: block;    
	background-color: #CCC;    
	filter: alpha(opacity = 55);    
	opacity:.55;
	
}

.showScreen
{
    width:350px;
    height:350px;
    position:absolute;
    margin-top:auto;
    margin-left:195px;
	z-index: 20;
	background-color: White;
	border-style:outset;
	border-width:thick;
}
.showBehind
{
    position:relative;
	z-index: 1;
}
.siteLoading
{
	position:absolute;
	width:300px;
	height:150px;
	z-index: 2;
	background-color:White;
	border-style:outset;
	border-width:thick;
	cursor:auto;
}

.siteCover {
width: 100%;
height: 100%;
background: orange;
position: absolute;
top: 0px;
left: 0px;
z-index: 3;
}


.siteNoDisplay
{
	display:none;
}

.siteDisplay
{
    display:;
}

.siteError
{
	color:Red;
	font-weight:bold;
	font-size:small;
}

